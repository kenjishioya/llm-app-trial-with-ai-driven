# ========================================
# QRAI MVP API 環境変数設定
# ========================================

# === アプリケーション基本設定 ===
QRAI_APP_NAME="QRAI MVP API"
QRAI_VERSION="1.0.0"
QRAI_DEBUG=true

# === データベース設定 ===
# pragma: allowlist secret
QRAI_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/qrai_dev  # pragma: allowlist secret

# === LLM Provider設定 ===
# OpenRouter (プライマリプロバイダー)
QRAI_OPENROUTER_API_KEY=あなたのOpenRouterAPIキー  # pragma: allowlist secret
QRAI_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Google AI Studio (フォールバックプロバイダー)
QRAI_GOOGLE_AI_API_KEY=あなたのGoogleAIAPIキー  # pragma: allowlist secret
QRAI_GOOGLE_AI_MODEL=gemini-pro

# === Azure AI Search設定 (Phase 2以降) ===
QRAI_AZURE_SEARCH_ENDPOINT=""
QRAI_AZURE_SEARCH_KEY=""
QRAI_AZURE_SEARCH_INDEX="qrai-index"

# === レート制限設定 ===
QRAI_RATE_LIMIT_REQUESTS=20
QRAI_RATE_LIMIT_WINDOW=60

# === CORS設定 ===
QRAI_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# === ログ設定 ===
QRAI_LOG_LEVEL=DEBUG

